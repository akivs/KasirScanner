<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:contentPadding="8dp"
    app:cardCornerRadius="4dp"
    android:layout_marginBottom="8dp"
    app:cardBackgroundColor="@color/bluesmut"
    android:elevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/noimage"
            android:id="@+id/imageno"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kode"
            android:layout_toEndOf="@id/imageno"
            android:textColor="@color/white"
            android:layout_marginStart="5dp"
            android:id="@+id/tvkode"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Stok"
            android:layout_below="@id/tvkode"
            android:layout_toEndOf="@id/imageno"
            android:layout_marginStart="5dp"
            android:textColor="@color/white"
            android:id="@+id/tvnamastok"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harga Stok"
            android:layout_below="@id/tvkode"
            android:layout_toRightOf="@id/imageno"
            android:layout_marginStart="5dp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:id="@+id/tvhargastok"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jumlah Stok"
            android:layout_marginStart="20dp"
            android:layout_alignParentEnd="true"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            android:id="@+id/tvjumstok"/>

        <ImageView
            android:id="@+id/ivDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_delete_forever"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            android:tint="@android:color/darker_gray"
            tools:ignore="ContentDescription" />
    </RelativeLayout>

</androidx.cardview.widget.CardView>